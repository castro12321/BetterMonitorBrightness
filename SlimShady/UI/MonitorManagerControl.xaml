<UserControl x:Class="SlimShady.UI.MonitorManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlimShady.UI"
             xmlns:slim="clr-namespace:SlimShady"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        
        <ItemsControl ItemsSource="{Binding Monitors}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <slim:MonitorSliders OwnedMonitor="{Binding Monitor}" OwnedConfig="{Binding Config}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</UserControl>
